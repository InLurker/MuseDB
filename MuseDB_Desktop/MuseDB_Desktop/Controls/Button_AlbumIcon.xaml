<UserControl x:Class="MuseDB_Desktop.Controls.Button_AlbumIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuseDB_Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="164" d:DesignWidth="160" Margin="12,5,12,8" HorizontalAlignment="Left" 
             Loaded="OnLoad">
    <Grid>
        <Button Style="{DynamicResource ImageButtonStyle}" Width="150" Height="150" Margin="4,0,0,0" MouseDown="OnClick">
            <Image x:Name="Button_Image" Source="/img/icon_albumloading.png" Stretch="UniformToFill"/>
            <Button.Effect>
                <DropShadowEffect Color="#10B4B4B4" BlurRadius="10" ShadowDepth="4" Direction="225" />
            </Button.Effect>
        </Button>
    </Grid>
</UserControl>
